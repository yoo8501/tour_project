		bulletin_comment(content,member_id,bulletin_board_id,depth,rank)
		values(#{content},#{member.member_id},#{bulletinBoard.bulletin_board_id},0,1)
	</insert>
	

 -->
	<update id="update" parameterType="BulletinComment">
		update bulletin_comment
		set
		content = #{content}, regdate = sysdate
		where
		bulletin_comment_id=#{bulletin_comment_id}
	</update>
	<delete id="delete" parameterType="int">
		delete from bulletin_comment
		where bulletin_comment_id = #{bulletin_comment_id}
	</delete>
	<delete id="deleteByBoard" parameterType="int">
		delete from
		bulletin_comment where bulletin_board_id =
		#{bulletinBoard.bulletin_board_id}
	</delete>
	<sql id="selectInclude">
		select
		bulletin_comment_id,member_id,content,bulletin_board_id,depth,rank,regdate
		from bulletin_comment
	</sql>
</mapper>